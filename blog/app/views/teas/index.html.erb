<h1>Listing teas</h1>

<table border="1px dashed">
  <tr>
    <th><%= (t 'name').capitalize%></th>
    <th><%= (t 'producer') .capitalize%></th>
    <th><%= (t 'type_of_fluid') .capitalize%></th>
    <th><%= (t 'webpage') .capitalize%></th>
    <th><%= (t 'image') .capitalize%></th>
    <th><%= (t 'extra_content') .capitalize%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teas.each do |tea| @tea=tea %>
  <tr>
    <td><%= tea.name %></td>
    <td><%= tea.producer %></td>
    <td>  <%= render "type_of_fluid" %> </td>
    <!-- <td><a href="<%=tea.webpage%>">website</a></td> -->
    <td><%= render "teas/webpage" %></td>
    <!--<td><img src="<%= tea.image %>" /></td> -->
    <td><%= render "teas/image" %></td>
    <td><%= tea.extra_content %></td>
    <td><%= link_to 'Show', tea %></td>
    <td><%= link_to 'Edit', edit_tea_path(tea) %></td>
    <td><%= link_to 'Destroy', tea, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

